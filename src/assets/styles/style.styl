/* Colors */
highLight-color = #ff0066
secondary-color = #212121
bg-color = #333

/* Dev mode */
border()
  border: 1px dashed

/* Box Model */
*
  box-sizing: border-box

/* Generics */
html,
body
  height: 100%

body
  backGround-color: bg-color
  display: flex
  flex-direction: column
  font-weight: 300

.main
  flex: 1

.container-centered
  display: flex
  justify-content: center
  align-items: center

.profile-container
  border()
  width: 100%
  max-width: 500px
  text-align: center

.profile-img
  border-radius: 50%
  width: 100%
  max-width: 200px

.heading-lv1
  color: #fff
  font-family: 'Lobster', cursive
  font-size: 42px
  margin: 5px

.paragraph
  color: #fff

.container
  border()
  display: flex
  flex-wrap: wrap
  max-width: 800px
  margin: 0 auto
  width: 100%

/* Partials */
@import 'partials/header.styl'
@import 'partials/footer.styl'
